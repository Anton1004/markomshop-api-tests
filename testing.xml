<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    TESTNG SUITE - КОНФИГУРАЦИОННЫЙ ФАЙЛ ДЛЯ ЗАПУСКА ТЕСТОВ
    Этот файл управляет порядком выполнения тестов и настройками
 -->
<suite name="Markomshop Registration Tests Suite" verbose="1">

    <!--
        Параметры suite - настройки для всех тестов
        parallel="false" - тесты запускаются последовательно (важно для BaseTest)
     -->
    <test name="User Registration Tests" parallel="false" thread-count="1">

        <!--
            КЛАССЫ ВЫПОЛНЯЮТСЯ В ПОРЯДКЕ ИХ ОБЪЯВЛЕНИЯ
            Это КРИТИЧЕСКИ ВАЖНО для нашей логики:
            1. Сначала выполняется BaseTest (и его @BeforeSuite)
            2. Потом RegisterTest (основные тесты)
         -->
        <classes>
            <!--
                BaseTest ДОЛЖЕН БЫТЬ ПЕРВЫМ!
                Его @BeforeSuite метод waitForService() выполнится перед всеми тестами
             -->
            <class name="org.example.base.BaseTest"/>

            <!--
                Основной тестовый класс
                Выполнится ПОСЛЕ того как BaseTest убедится что сервис готов
             -->
            <class name="org.example.testRegister.RegisterTest"/>
        </classes>
    </test>

</suite>